<div class="show-talk">

<div class="title"><%= @talk.title %></div>

<div class="speaker"><%= @talk.speaker %></div>

<div class="time"><%= @talk.time_to_long_s  %></div>

<div class="abstract"><%= @talk.abstract.html_safe %></div>

<div class="comment">This talk is organized by <%= @talk.owner.name %></div>

<% if can? :edit, @talk %>
<p>
<%= link_to "edit talk", edit_talk_path(@talk) %>
&nbsp;&nbsp;
<%= link_to "delete talk", @talk, :confirm => 'Are you sure?', :method => :delete %>
</p>
<% end %>
