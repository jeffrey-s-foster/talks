/* params

     subscribable - the list or talk being subscribed to

*/

$("body").spin(false);

<% if current_user && (subscribable.owner? current_user) %>
  $(".badge-owner").show();
<% else %>
  $(".badge-owner").hide();
<% end %>

<% if current_user && (subscribable.poster? current_user) %>
  $(".badge-poster").show();
<% else %>
  $(".badge-poster").hide();
<% end %>

<% if current_user && (subscribable.subscriber? current_user) %>
  $(".badge-subscriber").show();
  $(".badge-watcher").hide();
  $(".subscribe").hide();
  $(".watch").show();
  $(".unsubscribe").show();
<% elsif current_user && (subscribable.watcher? current_user) %>
  $(".badge-subscriber").hide();
  $(".badge-watcher").show();
  $(".subscribe").show();
  $(".watch").hide();
  $(".unsubscribe").show();
<% elsif current_user %>
  $(".badge-subscriber").hide();
  $(".badge-watcher").hide();
  $(".subscribe").show();
  $(".watch").show();
  $(".unsubscribe").hide();
<% else %>
  $(".badge-subscriber").hide();
  $(".badge-watcher").hide();
  $(".subscribe").hide();
  $(".watch").hide();
  $(".unsubscribe").hide();
<% end %>

<% if current_user && (subscribable.respond_to? :registered?) && (subscribable.registered? current_user) %>
   $(".badge-registered").show();
   $(".not-registered").hide();
   $(".registered").show();
   $(".register").hide();
   $(".unregister").show();
<% elsif current_user && (subscribable.respond_to? :registered?) %>
   $(".badge-registered").hide();
   $(".not-registered").show();
   $(".registered").hide();
   $(".register").show();
   $(".unregister").hide();
<% else %>
   $(".not-registered").hide();
   $(".registered").hide();
   $(".badge-registered").hide();
   $(".register").hide();
   $(".unregister").hide();
<% end %>
