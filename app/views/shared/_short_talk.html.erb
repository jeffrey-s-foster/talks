<% if false %>

parameters:
  talk - the talk
  subscription_kind - what kind of subscription

<% end %>

<div class="short-talk">
  <div class="big-time">
  </div>
  <div class="body">
    <div class="lists"><%= render_lists(talk) %></div>
    <div class="title">
      <%= link_to talk.title, talk %>
      <% if talk.owner? current_user %>
        <span class="badge-owner" title="You own this talk"></span>
      <% end %>
      <% case subscription_kind %>
      <% when :kind_subscriber %>
        <span class="badge-subscriber" title="You are subscribed to this talk"></span>
      <% when :kind_watcher %>
        <span class="badge-watcher" title="You are watching this talk"></span>
      <% when :kind_subscriber_through %>
        <span class="badge-subscriber-through" title="You are subscribed to this talk because you are subscribed to a list containing it"></span>
      <% when :kind_watcher_through %>
        <span class="badge-watcher-through" title="You are watching this talk because you are watching a list containing it"></span>
      <% end %>
    </div>
    <div class="speaker"><%= render_speaker(talk)  %></div>
    <div class="venue"><%= render_venue(talk) %></div>
    <div class="time"><%= render_time(talk) %></div>
    </div>
</div>
