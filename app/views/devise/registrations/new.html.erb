<h2>Registration</h2>

<p>
<div>
<b>Note:</b> This site does not yet use SSL, so please be aware that
your password will be sent in cleartext.
</div>

<p>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages :header_message => "Error", :message => nil, :header_tag => :div %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :organization %> (may leave blank for umd) <br/>
  <%= f.text_field :organization %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Register" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
